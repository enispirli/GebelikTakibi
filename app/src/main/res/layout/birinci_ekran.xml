<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rrBirinci"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewGelenKelimeler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textColor="#861e64"
        android:textSize="23dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonshape"
        android:layout_margin="15dp"
        android:layout_above="@+id/buttonOnceki"
        android:layout_below="@+id/textViewGelenKelimeler">

        <TextView
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/textViewGelenKelimeler"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#861e64"
            android:id="@+id/textViewAnlami"
            android:layout_width="match_parent"
            android:textSize="17dp" />
    </ScrollView>


    <Button
        android:id="@+id/buttonOnceki"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textViewAnlami"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewAnlami"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/pembeonce"
        android:onClick="onClick" />

    <Button
        android:id="@+id/buttonSonraki"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/buttonOnceki"
        android:layout_toRightOf="@+id/buttonOnceki"
        android:background="@mipmap/pembeileri"
        android:onClick="onClick" />


</RelativeLayout>