<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.gebeliktakibi.NoteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC4949"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Ponçik Notlar"
            android:textSize="20sp"
            android:textColor="#fff"

            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/etNewNote"
        android:background="@drawable/notshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Ne hissediyorsunuz?"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:text="" />

    <EditText
        android:id="@+id/etIcerik"
        android:layout_width="match_parent"
        android:background="@drawable/notshape"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hislerini uzunca anlat "
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnAddNote"
        android:background="@drawable/shapeiki"
        android:drawableLeft="@drawable/notepad"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="#CC4949"
        android:text="Bebeğinize Not Yazın" />

    <ListView
        android:id="@+id/lvNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        />

</LinearLayout>
